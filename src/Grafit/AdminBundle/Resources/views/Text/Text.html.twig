{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Text{% endblock %}

{% block content %}
<h2 class="admin-title">Texti na naslovnici</h2>
<a class="btn btn-small pull-right" href="{{ path('_admin_add_text') }}"><i class="icon-plus"></i> Dodaj Text</a>
<table class="table table-condensed table-hover border mytable">
  <thead>
    <tr>
      <th>Id</th>
      <th style="text-align: center;">Text</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {% set counter = 0 %}
    {% for item in items %}
    {% set counter = counter + 1 %}
    <tr>
      <td>{{ item.id }}</td>
      <td>{{ item.text|length > 250 ? item.text|slice(0, 250) ~ '...' : item.text }}</td>
      <td><a href="{{ path('_admin_edit_text', {'id': item.id}) }}" title="Uredi text">
              <i class="icon-edit"></i>Uredi</a>&nbsp;
              <a href="{{ path('_admin_delete_text', {'id': item.id } ) }}" class="confirmation" title="Odstrani storitve" data-confirmation="Ali si prepričan?">
                  <i class="icon-trash">Izbriši</i></a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
