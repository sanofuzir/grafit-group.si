<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} Â» Grafit Group</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    {% stylesheets output='css/style.css' filter=''
           '@CoreBundle/Resources/assets/css/bootstrap.css'
           '@CoreBundle/Resources/assets/css/bootstrap-theme.css'
           '@CoreBundle/Resources/assets/css/style.css'
           '@CoreBundle/Resources/assets/css/lightbox.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <!--script src="js/vendor/modernizr-2.6.2.min.js"></script-->
    <style>
        @font-face
        {
            font-family: Bebas;
            src: url('{{ asset('bundles/static/Font/BebasNeue.otf') }}');
        }
        @font-face
        {
            font-family: Gothic;
            src: url('{{ asset('bundles/static/Font/CenturyGothic.ttf') }}');
        }
     </style>
  </head>

  <body>
    <div class="navbar navbar-fixed-top" style="height: 270px; background: white url('{{ asset('bundles/static/images/backgroud.jpg') }}') repeat-y; ">
      <div class="navbar-inner">
        <div class="container" style="margin-top: 10px;">
          <div class="flags">
                <a href="{{ path('home', {"_locale": "en"}) }}">
                    <img src="{{ asset('bundles/static/images/en.gif') }}" alt="eng">
                </a>
                <a href="{{ path('home', {"_locale": "sl"}) }}">
                    <img src="{{ asset('bundles/static/images/sl.jpg') }}" alt="slo">
                </a>
            </div>
          <div class="my-top-meni">
            <div>
              <img src="{{ asset('bundles/static/images/LOGO.jpg') }}" style="width: 65%;"/>
            </div>
            <div style="float: right;">
              <form name="cse" id="searchbox_demo" action="http://www.google.com/cse">
                <input type="hidden" name="cref" value="" />
                <input type="hidden" name="ie" value="utf-8" />
                <input type="hidden" name="hl" value="" />
                <input name="q" type="text" size="20" style="height: 20px;" />
                <input class="my-button" type="submit" name="search" value="Search" style="padding-top: 2px; vertical-align: top;"/>
              </form>
            </div>
          </div>
           
           <div class="my-meni-labels"> 
            <ul class="nav nav2" style="margin: -5px 0 0 20px;">
              <li style="float: left; list-style-type: none; text-align: center; margin-left: -20px; background-color: #5DC13B;">
                  <a style="color: #c6c8c9;" href="{{ path('home') }}"><span class="main-menu-title" style="color: white; margin-left: -20px;">{% trans %}Domov{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: list-style-type: none; text-align: center; margin-left: -20px; border-left: none;">
                  <a style="color: #c6c8c9;" href="{{ path('_about') }}"><span class="main-menu-title" style="color: #A7A9AB;">{% trans %}O nas{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_news') }}"><span class="main-menu-title" style="color: #A7A9AB;">{% trans %}Novice{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_shop') }}"><span class="main-menu-title" style="color: #A7A9AB;">{% trans %}Trgovina{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_services') }}"><span class="main-menu-title" style="color: #A7A9AB;">{% trans %}Storitve{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_galery') }}"><span class="main-menu-title" style="color: #A7A9AB;">{% trans %}Galerija{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_contact') }}"><span class="main-menu-title" style="color: #A7A9AB;">{% trans %}Kontakt{% endtrans %}</span></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      {% for type, messages in app.session.flashbag.all() %}
          {% for message in messages %}
              <div class="alert alert-{{type}} fade in" data-alert="alert"><a class="close" data-dismiss="alert" href="#">&times;</a><div class="alert-heading">{{ message }}</div></div>
          {% endfor %}
      {% endfor %}
      {% block content %}{% endblock %}

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {% javascripts  output='js/scripts.js'
        '@CoreBundle/Resources/assets/js/vendor/jquery-1.11.0.min.js'
        '@CoreBundle/Resources/assets/js/vendor/lightbox.min.js'
        '@CoreBundle/Resources/assets/js/vendor/bootstrap.js'
        '@CoreBundle/Resources/assets/js/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

  </body>
</html>