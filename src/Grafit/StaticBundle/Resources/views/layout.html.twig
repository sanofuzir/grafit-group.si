<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} Â» Grafit Group</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    {% stylesheets output='css/style.css' filter=''
           '@CoreBundle/Resources/assets/css/bootstrap.css'
           '@CoreBundle/Resources/assets/css/bootstrap-theme.css'
           '@CoreBundle/Resources/assets/css/style.css'
           '@CoreBundle/Resources/assets/css/lightbox.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <!--script src="js/vendor/modernizr-2.6.2.min.js"></script-->
    <style>
        @font-face
        {
            font-family: Adobe;
            src: url('{{ asset('bundles/static/Font/Adobe_Caslon Pro.ttf') }}');
        }
        body, h2, .title {
        font-family: Adobe;
        }
     </style>
  </head>

  <body>

    <div class="navbar navbar-fixed-top" style="height: 60px; background-color: black;">
      <div class="navbar-inner">
        <div class="container" style="margin-top: 10px;">
            <div class="flags" style="position: relative; margin: -10px auto 0 auto; width: 57%;">
                <a href="{{ path('home', {"_locale": "en"}) }}" style="margin-left: -40px;">
                    <img src="{{ asset('bundles/static/images/en.gif') }}" alt="eng">
                </a>
                <a href="{{ path('home', {"_locale": "sl"}) }}">
                    <img src="{{ asset('bundles/static/images/sl.jpg') }}" alt="slo">
                </a>
            </div>
            
            <ul class="nav nav2" style="margin: -5px 0 0 30px;">
              <li style="float: left; width: 150px; list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('home') }}"><span class="main-menu-title">{% trans %}Domov{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: 150px; list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_about') }}"><span class="main-menu-title">{% trans %}O nas{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: 150px; list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_news') }}"><span class="main-menu-title">{% trans %}Novice{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: 150px; list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_shop') }}"><span class="main-menu-title">{% trans %}Trgovina{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: 150px; list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_services') }}"><span class="main-menu-title">{% trans %}Storitve{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: 150px; list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_galery') }}"><span class="main-menu-title">{% trans %}Galerija{% endtrans %}</span></a>
              </li>
              <li style="float: left; width: 150px; list-style-type: none; text-align: center; margin-left: -20px;">
                  <a style="color: #c6c8c9;" href="{{ path('_contact') }}"><span class="main-menu-title">{% trans %}Kontakt{% endtrans %}</span></a>
              </li>
            </ul>
        </div>
      </div>
    </div>
    <div class="container">
      {% for type, messages in app.session.flashbag.all() %}
          {% for message in messages %}
              <div class="alert alert-{{type}} fade in" data-alert="alert"><a class="close" data-dismiss="alert" href="#">&times;</a><div class="alert-heading">{{ message }}</div></div>
          {% endfor %}
      {% endfor %}
      {% block content %}{% endblock %}

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {% javascripts  output='js/scripts.js'
        '@CoreBundle/Resources/assets/js/vendor/jquery-1.11.0.min.js'
        '@CoreBundle/Resources/assets/js/vendor/lightbox.min.js'
        '@CoreBundle/Resources/assets/js/vendor/bootstrap.js'
        '@CoreBundle/Resources/assets/js/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

  </body>
</html>